{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center">
    <h1>Информация о книге</h1>

    <table class="table table-secondary">
        <tbody>
            <tr>
                {# <a href="{{ path('app_book_show', {'id': book.id}) }}" style='margin: 20px;'> #}
                    <img src="{{ book.poster}}" style='height: 200px;'>
                {# </a> #}
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.Name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.Author }}</td>
            </tr>
            <tr>
                <th>Pdf файл для загрузки</th>
                <th>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" style='margin: 20px;'>
                            <a href="{{ book.file}}">book</a>
                    </a>
                </th>
            </tr>
            <tr>
                <th>Последняя дата чтения</th>
                <td>{{ book.lastReadDate ? book.lastReadDate|date('Y-m-d') : '26-05-2022' }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <div class="input-group mb-3" style="margin: 0 0 0 5%;">
        <a href="{{ path('app_book_index') }}" class="btn btn-primary">Вернуться к списку книг</a>
    </div>
    <div class="input-group mb-3" style="margin: 0 0 0 5%;">
        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary">Изменить</a>
    </div>
    <div class="input-group mb-3" style="margin: 0 0 0 5%;">
        {{ include('book/_delete_form.html.twig') }}
    </div>
{% endblock %}
