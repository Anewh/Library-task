{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.Name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.Author }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ book.poster }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ book.file }}</td>
            </tr>
            <tr>
                <th>Last_read_date</th>
                <td>{{ book.lastReadDate ? book.lastReadDate|date('Y-m-d') : '26-05-2022' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

